{
    "manifest_version" : 2,
    "version" : "0.1",
    "name" : "Better Recommendations",
    "content_scripts" : [
        {
            "matches":["<all_urls>"],
            "js":["main.js"]
        }
    ],
    "web_accessible_resources": [
        "./img/pretzo.jpg"
    ],
    "icons": {
        "48" : "./img/zune-icon.png",
        "96" : "./img/keyboard-icon.png"
    },
    "browser_action":{
        "default_icon":{
            "19":"./img/mouse-icon.png",
            "38":"./img/buddy-icon.png"
        }
    },
    "background":{
        "scripts":["background.js"]
    },
    "permissions":[
        "tabs"
    ]
}